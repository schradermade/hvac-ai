        "exec": [
          "const autoVarsEnabled = pm.environment.get(\"autoVarsEnabled\") === \"true\";",
          "",
          "if (autoVarsEnabled) {",
          "  const now = new Date();",
          "  pm.environment.set(\"nowIso\", now.toISOString());",
          "  pm.environment.set(\"today\", now.toISOString().slice(0, 10));",
          "  pm.environment.set(\"uuid\", pm.variables.replaceIn(\"{{$guid}}\"));",
          "",
          "  const rand = Math.floor(Math.random() * 1000000);",
          "  pm.environment.set(\"randInt\", String(rand));",
          "  pm.environment.set(\"noteContent\", `Rattling reported (${rand}) at ${now.toISOString()}`);",
          "",
          "  if (!pm.environment.get(\"idempotencyKey\")) {",
          "    pm.environment.set(\"idempotencyKey\", pm.variables.replaceIn(\"{{$guid}}\"));",
          "  }",
          "}",
          "",
          "// Auth headers",
          "const clientId = pm.environment.get(\"accessClientId\");",
          "const clientSecret = pm.environment.get(\"accessClientSecret\");",
          "",
          "if (clientId && clientSecret) {",
          "  pm.request.headers.upsert({ key: \"CF-Access-Client-Id\", value: clientId });",
          "  pm.request.headers.upsert({ key: \"CF-Access-Client-Secret\", value: clientSecret });",
          "} else {",
          "  pm.request.headers.upsert({ key: \"x-tenant-id\", value: pm.environment.get(\"tenantId\") || \"\" });",
          "  pm.request.headers.upsert({ key: \"x-user-id\", value: pm.environment.get(\"userId\") || \"\" });",
          "}",
          ""
        ]
